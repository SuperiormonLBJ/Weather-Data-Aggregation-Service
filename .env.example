# ============================================================================
# API CREDENTIALS
# ============================================================================
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHERAPI_KEY=your_weatherapi_key_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
HOST=127.0.0.1
PORT=8000

# ============================================================================
# CACHE CONFIGURATION (Short cache for development)
# ============================================================================
CACHE_TTL=60

# ============================================================================
# TIMEOUTS (Longer for debugging)
# ============================================================================
OPENWEATHER_TIMEOUT_TOTAL=10.0
OPENWEATHER_TIMEOUT_CONNECT=3.0
WEATHERAPI_TIMEOUT_TOTAL=10.0
WEATHERAPI_TIMEOUT_CONNECT=3.0
OPENMETEO_TIMEOUT_TOTAL=12.0
OPENMETEO_TIMEOUT_CONNECT=3.0

# ============================================================================
# RATE LIMITING (Generous for development)
# ============================================================================
OPENWEATHER_TOKENS=100
OPENWEATHER_REFILL_RATE=2.0
WEATHERAPI_TOKENS=150
WEATHERAPI_REFILL_RATE=2.5
OPENMETEO_TOKENS=2000
OPENMETEO_REFILL_RATE=20.0

# ============================================================================
# RETRY CONFIGURATION (More retries for dev)
# ============================================================================
MAX_RETRIES=5
BASE_DELAY=1.0
MAX_DELAY=32.0
JITTER_FACTOR=0.2
BACKOFF_MULTIPLIER=2.0

# ============================================================================
# CONNECTION POOL (Small for development)
# ============================================================================
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_PER_HOST=10
CONNECTION_KEEPALIVE_TIMEOUT=30
